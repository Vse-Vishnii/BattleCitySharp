<Window x:Class="BattleCitySharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleCitySharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1280">
    <Grid Background="#757575">

        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="field" Grid.Row="1" Grid.Column="1" Height="910" Width="910" Background="Black">
            <Image x:Name="tank" Canvas.Left="0" Source="images/wall1.png"></Image>
        </Canvas>
    </Grid>
</Window>
